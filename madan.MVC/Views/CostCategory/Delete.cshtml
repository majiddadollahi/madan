@model madan.MVC.Data.Models.CostCategory

@{
    ViewData["Title"] = "حذف دسته‌بندی هزینه";
}

<h1>حذف دسته‌بندی هزینه</h1>

<h3>آیا از حذف این مورد اطمینان دارید؟</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            وضعیت
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">بازگشت به لیست</a>
    </form>
</div> 