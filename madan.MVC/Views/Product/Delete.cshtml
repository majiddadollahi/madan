@model madan.MVC.Data.Models.Product

@{
    ViewData["Title"] = "حذف محصول";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex align-items-center">
                <h2 class="mb-0">@ViewData["Title"] - @Model.Name</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        آیا از حذف این محصول اطمینان دارید؟
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">نام محصول</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">وضعیت</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-success">فعال</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">غیرفعال</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                            تایید حذف
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-right"></i>
                            بازگشت به لیست
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 10px;
        }
        
        .card-body {
            padding: 2rem;
        }
        
        dt {
            font-weight: 600;
            color: #6c757d;
        }
        
        .badge {
            padding: 0.5em 1em;
        }
        
        .btn {
            padding: 0.5rem 1rem;
            margin-right: 0.5rem;
        }
        
        .alert {
            border-radius: 5px;
        }
        
        .alert i {
            margin-left: 0.5rem;
        }
    </style>
} 