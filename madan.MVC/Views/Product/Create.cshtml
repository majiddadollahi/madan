@model madan.MVC.Data.Models.Product

@{
    ViewData["Title"] = "افزودن محصول جدید";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex align-items-center">
                <h2 class="mb-0">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">نام محصول</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <div class="custom-control custom-switch">
                                <input asp-for="IsActive" class="custom-control-input" />
                                <label asp-for="IsActive" class="custom-control-label">فعال</label>
                            </div>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i>
                                ذخیره
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-right"></i>
                                بازگشت به لیست
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 10px;
        }
        
        .card-body {
            padding: 2rem;
        }
        
        .form-control {
            border-radius: 5px;
            padding: 0.75rem 1rem;
        }
        
        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
        }
        
        .custom-switch {
            padding-right: 2.25rem;
            padding-left: 0;
        }
        
        .custom-control-label {
            margin-right: 0.5rem;
        }
        
        .btn {
            padding: 0.5rem 1rem;
            margin-right: 0.5rem;
        }
    </style>
} 